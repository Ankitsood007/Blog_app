<% include ./partials/header %>

<div class="ui main text container ">
   <div class="ui huge header">Resftfull blog app</div>
      <div class="ui top attached segment">
        <div class="ui divided items"

          <% blogs.forEach(function(blog){%>

         <div class="item">

            <div class="image"><img src= "<%=blog.image%>"></div>
            <div class="content">
             <a class="header"  href="/blogs/<%= blog._id%>"> <%=blog.title%></a>
             <div class="description">
              <p> <%=blog.body%></p>
         
                <div class="extra">
                             <a class="ui floated basic violet button"  href="/blogs/<%= blog._id%>"> <%=blog.title%></a>

             </div>
          </div>


               
               
                <a href="/blogs/<%= blog._id%>"><button class="ui green basic button">Read more!!</button></a>
         </div>

           <% }) %>

     </div>
   </div>
</div>




 
